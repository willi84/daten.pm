{% set aria_label = 'aria_label="' + params.aria_label +'"' if params.aria_label is defined else "" %}
{% set collapseID =  params.collapseID %}
{% set collapseShow =  params.collapseShow if params.collapseShow is defined else "" %}

<a data-component-type="atom" data-component="link" {{aria_label | safe }}
    {#  collapse #}
    {% if collapseID %}
        data-bs-toggle="collapse"
        data-bs-target="#{{collapseID}}"
        aria-expanded="{{ 'true' if collapseShow == 'show' else 'false' }}"
        aria-controls="{{collapseID}}"
    {% endif %}
    class="{{params.class}} {{params.class_modifier}}" href="{{ params.url | url | safe}}">
    {{ params.text }}
    {% if params.post_html %}
        {{params.post_html | safe}}
    {% endif %}
</a>
