{# Repos: {{raw.civic_issues | dump}} #}


{# list of streets #}
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">state</th>
      <th scope="col">category</th>
      <th scope="col">text</th>
      <th scope="col">street</th>
    </tr>
  </thead>
  <tbody>
    {% for item in repos.civic_issues.items %}
    <tr>
      <th scope="row">{{item.id}}</th>
      <td>{{item.state}}</td>
      <td>{{item.category.categoryName}}</td>
      <td>{{item.originalText}}</td>
      {% if item.address and item.address.address %}
        <td>{{item.address.address.road}}</td>
        {% else %}
        <td> - </td>
      {% endif %}

    </tr>
    {% endfor %}
  </tbody>
</table>
 