<div data-search="repos" class="container py-3">

  <!-- Suchfeld -->
  <div class="mb-3">
    <label for="street-search" class="form-label fw-semibold">StraÃŸe suchen</label>
    <div class="input-group">
      <span class="input-group-text">
        <i class="bi bi-search" aria-hidden="true"></i>
      </span>
      <input
        id="street-search"
        class="form-control"
        type="text"
        placeholder="Z. B. â€žHermann-GÃ¶ritz-StraÃŸeâ€œ"
        list="streets-list"
        autocomplete="off"
      />
      <button class="btn btn-outline-secondary" type="button" id="clear-search">ZurÃ¼cksetzen</button>
    </div>
  </div>

  <!-- Datalist -->
  <datalist id="streets-list">
    {% for street, street_value in repos.streets %}
      <option
        value="{{ street_value.strn }}"
        data-id="{{ street_value.id }}"
      ></option>
    {% endfor %}
  </datalist>

  <!-- Dezentere Infobox -->
  <div id="street-info" class="border rounded p-3 mb-3 bg-light-subtle">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <div class="text-muted small">Aktuelle Auswahl</div>
        <div class="fw-semibold text-body" id="street-name">Bitte eine StraÃŸe auswÃ¤hlen.</div>
      </div>
      <span class="badge bg-secondary-subtle text-secondary" id="street-id">â€”</span>
    </div>
  </div>

  <!-- Dataset-Liste (standardmÃ¤ÃŸig versteckt) -->
  <div id="dataset-list">
    <ul class="list-group">
      {% for street, street_value in repos.streets %}
        {% set dataSets = repos.all[street_value.id] %}
        <li
          class="list-group-item d-none bg-body-tertiary"
          data-street-id="{{ street_value.id }}"
          data-street-name="{{ street_value.strn }}"
        >
          <div class="d-flex justify-content-between align-items-start">
            <div class="flex-grow-1">
              <div class="fw-semibold mb-2">
                {{ street_value.strn }}
                <span class="badge bg-light text-body-secondary border ms-2">ID: {{ street_value.id }}</span>
              </div>

              <ul class="mt-2 mb-0 ps-3">
                {% for dataSet in dataSets.dataSet %}
                  {% set repo = repos_all.data.repo_list[dataSet] %}
                  {% set org  = repos_all.data.organisations[repo.org] %}
                  <li class="mb-3">
                    <a
                      href="{{ repo.url or ('https://mitgestalten.potsdam.de/de/maengel-melden?action=details&id=' + dataSet) }}"
                      target="_blank"
                      class="fw-semibold link-primary text-decoration-none"
                    >
                      ðŸ”— {{ repo.name }}
                    </a>
                    <br/>
                    <small class="text-muted">Org: {{ org.display_name }} Â· DS-ID: {{ dataSet }}</small>

                    {# --- Civic Issues hÃ¼bsch & kompakt --- #}
                    {% if dataSet == "civic_issues"%}
                    {% set issueCount = 0 %}
                    {% for item in repos.civic_issues_final.items %}
                      {% if item.id and item.streetID and item.streetID == street_value.id %}
                        {% set issueCount = issueCount + 1 %}
                      {% endif %}
                      {% endfor %}
                      

                    <div class="mt-3">
                      <div class="d-flex align-items-center gap-2 mb-2">
                        <span class="fw-semibold">Civic Issues</span>
                        <span class="badge bg-secondary-subtle text-secondary">{{ issueCount }}</span>
                      </div>

                      {% if issueCount > 0 %}
                        <div class="table-responsive">
                          <table class="table table-sm align-middle mb-0">
                            <thead class="table-light">
                              <tr>
                                <th class="text-nowrap">ID</th>
                                <th class="text-nowrap">Status</th>
                                <th class="text-nowrap">Kategorie</th>
                                <th>Beschreibung</th>
                                <th class="text-nowrap">Adresse</th>
                                <th class="text-nowrap">Link</th>
                              </tr>
                            </thead>
                            <tbody>
                              {% for item in repos.civic_issues_final.items %}
                                {% if item.id and item.streetID and item.streetID == street_value.id %}
                                  {% set state = (item.state or 'unbekannt') | lower %}
                                  {% if state in ['offen','open','neu','new'] %}
                                    {% set stateClass = 'bg-warning-subtle text-warning-emphasis' %}
                                  {% elif state in ['in_bearbeitung','in-bearbeitung','in review','in_progress','progress'] %}
                                    {% set stateClass = 'bg-info-subtle text-info-emphasis' %}
                                  {% elif state in ['erledigt','geschlossen','closed','done','resolved'] %}
                                    {% set stateClass = 'bg-success-subtle text-success-emphasis' %}
                                  {% else %}
                                    {% set stateClass = 'bg-secondary-subtle text-secondary' %}
                                  {% endif %}

                                  <tr>
                                    <td class="text-nowrap">
                                      <span class="badge bg-light text-body-secondary border">#{{ item.id }}</span>
                                    </td>
                                    <td>
                                      <span class="badge {{ stateClass }}">
                                        {{ item.state or 'â€”' }}
                                      </span>
                                    </td>
                                    <td class="text-nowrap">
                                      <span class="badge bg-primary-subtle text-primary-emphasis border">
                                        {{ item.category.categoryName or 'â€”' }}
                                      </span>
                                    </td>
                                    <td class="issue-text">
                                      {{ item.originalText or 'â€”' }}
                                    </td>
                                    <td class="text-nowrap">
                                      {% if item.address and item.address.address %}
                                        {{ item.address.address.road }}
                                      {% else %}
                                        <span class="text-muted">â€”</span>
                                      {% endif %}
                                    </td>
                                    <td class="text-nowrap">
                                      {% set issueUrl = item.url or item.link or ('https://mitgestalten.potsdam.de/de/maengel-melden?action=details&id=' + item.id) %}
                                      <a href="{{ issueUrl }}" target="_blank" class="link-primary text-decoration-none">Ã–ffnen</a>
                                    </td>
                                  </tr>
                                {% endif %}
                              {% endfor %}
                            </tbody>
                          </table>
                        </div>
                      {% else %}
                        <div class="text-muted small">Keine Civic Issues fÃ¼r diese StraÃŸe gefunden.</div>
                      {% endif %}
                    </div>
                    {% endif %}
                    {# --- /Civic Issues --- #}
                  </li>
                {% endfor %}
              </ul>
            </div>

            <button
              type="button"
              class="btn btn-outline-primary btn-sm align-self-start select-street ms-3"
              data-id="{{ street_value.id }}"
              data-name="{{ street_value.strn }}"
            >
              Anzeigen
            </button>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>

  <input type="hidden" id="street-id-hidden" name="street_id" value="">
</div>

<script>
(function () {
  const input         = document.getElementById('street-search');
  const clearBtn      = document.getElementById('clear-search');
  const datalistOpts  = Array.from(document.querySelectorAll('#streets-list option'));
  const listItems     = Array.from(document.querySelectorAll('#dataset-list .list-group-item'));
  const infoNameEl    = document.getElementById('street-name');
  const infoIdEl      = document.getElementById('street-id');
  const hiddenIdInput = document.getElementById('street-id-hidden');

  function showOnly(streetId) {
    listItems.forEach(li => {
      const match = li.dataset.streetId === streetId;
      li.classList.toggle('d-none', !match);
      li.classList.toggle('active', match);
      li.classList.toggle('bg-body', match);
      li.classList.toggle('bg-body-tertiary', !match);
    });
  }

  function resetView() {
    input.value = '';
    infoNameEl.textContent = 'Bitte eine StraÃŸe auswÃ¤hlen.';
    infoIdEl.textContent = 'â€”';
    hiddenIdInput.value = '';
    listItems.forEach(li => {
      li.classList.add('d-none');
      li.classList.remove('active', 'bg-body');
      li.classList.add('bg-body-tertiary');
    });
  }

  function applySelectionById(streetId, streetName) {
    if (!streetId) return;
    infoNameEl.textContent = streetName || 'â€”';
    infoIdEl.textContent   = streetId;
    hiddenIdInput.value    = streetId;
    showOnly(streetId);
  }

  // Auswahl via Datalist (exakter Treffer)
  input.addEventListener('input', () => {
    const val = input.value.trim();
    const opt = datalistOpts.find(o => o.value === val);
    if (opt) {
      applySelectionById(opt.dataset.id, opt.value);
    } else {
      infoNameEl.textContent = 'Keine gÃ¼ltige StraÃŸe ausgewÃ¤hlt.';
      infoIdEl.textContent   = 'â€”';
      hiddenIdInput.value    = '';
      listItems.forEach(li => li.classList.add('d-none'));
    }
  });

  // Auswahl via Button im Listeneintrag
  document.getElementById('dataset-list').addEventListener('click', (e) => {
    const btn = e.target.closest('.select-street');
    if (!btn) return;
    applySelectionById(btn.dataset.id, btn.dataset.name);
    input.value = btn.dataset.name;
  });

  clearBtn.addEventListener('click', resetView);

  // Anfangszustand
  resetView();
})();
</script>

<style>
  /* Beschreibung: max. 3 Zeilen, sauber abgeschnitten */
  .issue-text {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-word;
  }

  /* Links klar sichtbar, auch auf grauem Hintergrund */
  a.link-primary {
    color: var(--bs-primary);
    transition: color .15s ease-in-out, text-decoration-color .15s ease-in-out;
  }
  a.link-primary:hover {
    color: var(--bs-primary-text-emphasis);
    text-decoration: underline;
    text-decoration-color: currentColor;
  }

  /* etwas Luft zwischen Datasets */
  #dataset-list .list-group-item + .list-group-item {
    margin-top: .25rem;
  }
</style>
